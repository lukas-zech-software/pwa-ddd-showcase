{
  "compilerOptions": {
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": false,
    "outDir": "build",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "dom",
      "es7",
      "es2015",
      "es2017.object"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
