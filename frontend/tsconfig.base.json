{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "outDir": "build",
    "module": "esNext",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es7",
      "es2015",
      "es2017.object"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true
  }
}
